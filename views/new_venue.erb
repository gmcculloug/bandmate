<h2><svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -3px; margin-right: 8px;"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="16"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg>Add New Venue</h2>

<% if defined?(@errors) && @errors.any? %>
    <div class="errors">
        <ul>
            <% @errors.each do |error| %>
                <li><%= error %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<form method="POST" action="/venues" class="card">
    <div class="form-group">
        <label for="venue_name">Venue Name *</label>
        <input type="text" id="venue_name" name="venue[name]" required autofocus>
    </div>

    <div class="form-group">
        <label for="venue_location">Location *</label>
        <input type="text" id="venue_location" name="venue[location]" placeholder="e.g., 123 Main St, City, State" required>
    </div>

    <div class="form-group">
        <label for="venue_contact_name">Contact Name *</label>
        <input type="text" id="venue_contact_name" name="venue[contact_name]" placeholder="e.g., John Smith" required>
    </div>

    <div class="form-group">
        <label for="venue_phone_number">Phone Number *</label>
        <input type="tel" id="venue_phone_number" name="venue[phone_number]" placeholder="e.g., (555) 123-4567" required>
    </div>

    <div class="form-group">
        <label for="venue_website">Website</label>
        <input type="url" id="venue_website" name="venue[website]" placeholder="https://www.venuewebsite.com">
    </div>

    <div class="form-group">
        <label for="venue_notes">Notes</label>
        <textarea id="venue_notes" name="venue[notes]" rows="4" placeholder="Any additional notes about the venue (capacity, setup requirements, parking info, etc.)"></textarea>
    </div>

    <div class="actions">
        <button type="submit" class="btn btn-success">Save Venue</button>
        <a href="/venues" class="btn">Cancel</a>
    </div>
</form> 