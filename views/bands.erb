<div class="page-header">
    <h2 class="page-title">ðŸŽ¸ Bands</h2>
    <div class="page-actions">
        <a href="/bands/new" class="btn btn-success">âž• Add Band</a>
    </div>
</div>

<% if params[:left_band] %>
    <div class="message message--success">
        You have successfully left the band.
    </div>
<% end %>

<% if @bands.any? %>
    <div style="display: flex; flex-direction: column; gap: 8px;">
        <% @bands.each do |band| %>
            <div class="band-card" style="padding: 12px; border: 1px solid #e2e8f0; border-radius: 6px; cursor: pointer;" onclick="window.location.href='/bands/<%= band.id %>'">
                <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 10px;">
                    <div style="flex: 1; min-width: 0;">
                        <div style="font-weight: 600; font-size: 1.1rem; word-break: break-word;"><%= band.name %></div>
                        <div style="margin-top: 4px; display: flex; gap: 15px; font-size: 0.85rem; color: #4a5568; flex-wrap: wrap;">
                            <span><strong>Songs:</strong> <%= band.songs.count %></span>
                            <span><strong>Gigs:</strong> <%= band.gigs.count %></span>
                            <span><strong>Members:</strong> <%= band.users.count %></span>
                            <% if band.owner? %>
                                <span style="background: #0ea5e9; color: white; padding: 2px 6px; border-radius: 10px; font-size: 0.75rem;">
                                    ðŸ‘‘ Owner: <%= band.owner.username %>
                                </span>
                            <% end %>
                        </div>
                        <% if band.notes.present? %>
                            <div style="margin-top: 4px; font-size: 0.85rem; color: #718096; font-style: italic; word-break: break-word;">
                                <%= band.notes.truncate(100) %>
                            </div>
                        <% end %>
                    </div>
                    <div class="actions" onclick="event.stopPropagation();" style="display: flex; gap: 5px; flex-shrink: 0;">
                        <% if band.owned_by?(current_user) %>
                            <a href="/bands/<%= band.id %>/edit" class="btn" style="font-size: 0.8rem; padding: 5px 10px;">Edit</a>
                            <form method="POST" action="/bands/<%= band.id %>" style="display: inline;">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger" style="font-size: 0.8rem; padding: 5px 10px;" onclick="return confirm('Delete this band? This will also delete all associated songs and set lists.')">Delete</button>
                            </form>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<% else %>
    <div style="text-align: center; padding: 40px;">
        <h3>No bands yet</h3>
        <p>Create your first band to get started!</p>
        <a href="/bands/new" class="btn btn-success">Create Band</a>
    </div>
<% end %> 