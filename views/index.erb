<h2>Welcome to Bandage</h2>
<p>Your complete song and set list management system for bands.</p>

<div style="display: grid; grid-template-columns: 1fr; gap: 20px; margin-top: 20px;">
    <!-- Desktop: 2 columns, Mobile: 1 column -->
    <style>
        @media (min-width: 768px) {
            .dashboard-grid {
                grid-template-columns: 1fr 1fr !important;
                gap: 30px !important;
            }
        }
    </style>
    <div class="dashboard-grid" style="display: grid; grid-template-columns: 1fr; gap: 20px;">

        <div class="card">
            <h3>ðŸ“‹ Set Lists</h3>
            <% if @set_lists.any? %>
                <% @set_lists.limit(5).each do |set_list| %>
                    <div class="set-list-item" style="cursor: pointer; padding: 12px; margin-bottom: 8px;" onclick="window.location.href='/set_lists/<%= set_list.id %>'">
                        <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 10px;">
                            <div style="flex: 1; min-width: 0;">
                                <div style="font-weight: bold; color: #2d3748; margin-bottom: 3px; word-break: break-word;"><%= set_list.name %></div>
                                <div style="font-size: 0.9rem; color: #718096;">
                                    <span style="background: #667eea; color: white; padding: 2px 6px; border-radius: 10px;">
                                        <%= set_list.songs.count %> songs
                                    </span>
                                </div>
                            </div>
                            <div class="actions" onclick="event.stopPropagation();" style="margin-left: 15px; flex-shrink: 0;">
                                <a href="/set_lists/<%= set_list.id %>/print" class="btn" style="padding: 6px 12px; font-size: 0.8rem;" target="_blank">Print</a>
                            </div>
                        </div>
                    </div>
                <% end %>
                <div style="text-align: center; margin-top: 20px;">
                    <a href="/set_lists" class="btn">View All Set Lists</a>
                </div>
            <% else %>
                <p>No set lists created yet. <a href="/set_lists/new" class="btn">Create your first set list!</a></p>
            <% end %>
        </div>

        <div class="card">
            <h3>ðŸŽµ Recent Songs</h3>
            <% if @songs.any? %>
                <div class="song-grid" style="grid-template-columns: 1fr; gap: 10px;">
                    <% @songs.limit(6).each do |song| %>
                        <div class="song-card" style="padding: 15px; margin-bottom: 10px; cursor: pointer;" onclick="window.location.href='/songs/<%= song.id %>'">
                            <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 10px;">
                                <div style="flex: 1; min-width: 0;">
                                    <div style="font-weight: bold; color: #2d3748; margin-bottom: 3px; word-break: break-word;"><%= song.title %></div>
                                    <div style="color: #718096; font-size: 0.9rem; margin-bottom: 5px; word-break: break-word;"><%= song.artist %></div>
                                    <div style="font-size: 0.8rem; color: #a0aec0; display: flex; flex-wrap: wrap; gap: 5px;">
                                        <span style="background: #667eea; color: white; padding: 2px 6px; border-radius: 10px;">
                                            <%= song.key %>
                                        </span>
                                        <% if song.tempo %>
                                            <span style="background: #38a169; color: white; padding: 2px 6px; border-radius: 10px;">
                                                <%= song.tempo %> BPM
                                            </span>
                                        <% end %>
                                    </div>
                                </div>
                                <div class="actions" onclick="event.stopPropagation();" style="margin-left: 15px; flex-shrink: 0;">
                                    <a href="/songs/<%= song.id %>/edit" class="btn" style="padding: 6px 12px; font-size: 0.8rem;">Edit</a>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
                <div style="text-align: center; margin-top: 20px;">
                    <a href="/songs" class="btn">View All Songs</a>
                </div>
            <% else %>
                <p>No songs added yet. <a href="/songs/new" class="btn">Add your first song!</a></p>
            <% end %>
        </div>
    </div>
</div>

 