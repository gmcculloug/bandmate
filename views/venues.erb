<div class="page-header">
    <h2 class="page-title"><svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -3px; margin-right: 8px;"><path d="M3 21h18"></path><path d="M5 21V7l8-4v18"></path><path d="M19 21V11l-6-4"></path></svg>Venues</h2>
    <div class="page-actions">
        <a href="/venues/new" class="btn btn-success"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 6px;"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="16"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg>Add Venue</a>
    </div>
</div>

<% if @venues.any? %>
    <div style="display: flex; flex-direction: column; gap: 8px;">
        <% @venues.each do |venue| %>
            <div class="venue-card" style="padding: 12px; border: 1px solid #e2e8f0; border-radius: 6px; cursor: pointer;" onclick="window.location.href='/venues/<%= venue.id %>'">
                <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 10px;">
                    <div style="flex: 1; min-width: 0;">
                        <div style="font-weight: 600; font-size: 1.1rem; word-break: break-word;"><%= venue.name %></div>
                        <div style="margin-top: 4px; display: flex; gap: 15px; font-size: 0.85rem; color: #4a5568; flex-wrap: wrap;">
                            <span><strong>Contact:</strong> <%= venue.contact_name %></span>
                            <span><strong>Phone:</strong> <%= venue.phone_number %></span>
                            <span><strong>Location:</strong> <%= venue.location %></span>
                        </div>
                        <% if venue.website.present? %>
                            <div style="margin-top: 4px; font-size: 0.85rem; color: #718096;">
                                <a href="<%= venue.website %>" target="_blank" style="color: #667eea; text-decoration: none;"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 6px;"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg><%= venue.website %></a>
                            </div>
                        <% end %>
                        <% if venue.notes.present? %>
                            <div style="margin-top: 4px; font-size: 0.85rem; color: #718096;">
                                <strong><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 6px;"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14,2 14,8 20,8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10,9 9,9 8,9"></polyline></svg>Notes:</strong> <%= venue.notes.length > 100 ? venue.notes[0..100] + '...' : venue.notes %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<% else %>
    <div style="text-align: center; padding: 40px;">
        <h3>No venues yet</h3>
        <p>Create your first venue to get started!</p>
        <a href="/venues/new" class="btn btn-success">Create Venue</a>
    </div>
<% end %>

<div style="text-align: center; margin-top: 30px; padding-top: 20px; border-top: 1px solid #e2e8f0;">
    <a href="/venues/archived" style="color: #718096; text-decoration: none; font-size: 0.9rem;"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 6px;"><polyline points="21,8 21,21 3,21 3,8"></polyline><rect x="1" y="3" width="22" height="5"></rect><line x1="10" y1="12" x2="14" y2="12"></line></svg>View Archived Venues</a>
</div> 