<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 10px;">
    <h2>🏢 Venues</h2>
    <a href="/venues/new" class="btn btn-success">➕ Add Venue</a>
</div>

<% if @venues.any? %>
    <div style="display: flex; flex-direction: column; gap: 8px;">
        <% @venues.each do |venue| %>
            <div class="venue-card" style="padding: 12px; border: 1px solid #e2e8f0; border-radius: 6px; cursor: pointer;" onclick="window.location.href='/venues/<%= venue.id %>'">
                <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 10px;">
                    <div style="flex: 1; min-width: 0;">
                        <div style="font-weight: 600; font-size: 1.1rem; word-break: break-word;"><%= venue.name %></div>
                        <div style="margin-top: 4px; display: flex; gap: 15px; font-size: 0.85rem; color: #4a5568; flex-wrap: wrap;">
                            <span><strong>Contact:</strong> <%= venue.contact_name %></span>
                            <span><strong>Phone:</strong> <%= venue.phone_number %></span>
                            <span><strong>Location:</strong> <%= venue.location %></span>
                        </div>
                        <% if venue.website.present? %>
                            <div style="margin-top: 4px; font-size: 0.85rem; color: #718096;">
                                <a href="<%= venue.website %>" target="_blank" style="color: #667eea; text-decoration: none;">🌐 <%= venue.website %></a>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<% else %>
    <div style="text-align: center; padding: 40px;">
        <h3>No venues yet</h3>
        <p>Create your first venue to get started!</p>
        <a href="/venues/new" class="btn btn-success">Create Venue</a>
    </div>
<% end %> 