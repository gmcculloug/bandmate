<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 10px;">
    <h2>ðŸ“‹ Set Lists</h2>
    <a href="/set_lists/new" class="btn btn-success">âž• Create New Set List</a>
</div>

<% if @set_lists.any? %>
    <% @set_lists.each do |set_list| %>
        <div class="set-list-item" style="cursor: pointer;" onclick="window.location.href='/set_lists/<%= set_list.id %>'">
            <div class="set-list-info" style="flex: 1; min-width: 0;">
                <h3 style="word-break: break-word;">
                    <%= set_list.name %>
                    <% if set_list.performance_date.present? %>
                        <span style="font-weight: normal; color: #718096; font-size: 0.9em;">
                            - <%= set_list.performance_date.strftime('%b %d') %>
                            <% if set_list.start_time.present? %>
                                - <%= set_list.start_time.strftime('%I:%M %p') %>
                                <% if set_list.end_time.present? %>
                                    - <%= set_list.end_time.strftime('%I:%M %p') %>
                                <% end %>
                            <% end %>
                        </span>
                    <% end %>
                </h3>
                <p style="display: flex; gap: 8px; flex-wrap: wrap;">
                    <span style="background: #667eea; color: white; padding: 2px 6px; border-radius: 10px;">
                        <%= set_list.songs.count %> songs
                    </span>
                    <% if set_list.venue && set_list.venue.present? %>
                        <span style="background: #9f7aea; color: white; padding: 2px 6px; border-radius: 10px;">
                            <%= set_list.venue.name %>
                        </span>
                    <% end %>
                </p>
                <% if set_list.notes.present? %>
                    <p style="font-style: italic; color: #718096; word-break: break-word;"><%= set_list.notes %></p>
                <% end %>
            </div>
            <div class="actions" onclick="event.stopPropagation();" style="flex-shrink: 0;">
                <a href="/set_lists/<%= set_list.id %>/edit" class="btn">Edit</a>
                <a href="/set_lists/<%= set_list.id %>/print" class="btn" target="_blank">Print</a>
                <form method="POST" action="/set_lists/<%= set_list.id %>/copy" style="display: inline;">
                    <button type="submit" class="btn" onclick="return confirm('Copy this set list?')">ðŸ“‹ Copy</button>
                </form>
                <form method="POST" action="/set_lists/<%= set_list.id %>" style="display: inline;">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this set list?')">Delete</button>
                </form>
            </div>
        </div>
    <% end %>
<% else %>
    <div class="card">
        <h3>No set lists yet!</h3>
        <p>Create your first set list to start organizing your songs for performances.</p>
        <a href="/set_lists/new" class="btn btn-success">Create Your First Set List</a>
    </div>
<% end %> 