<div class="page-header">
    <h2 class="page-title">📦 Archived Venues</h2>
    <div class="page-actions">
        <a href="/venues" class="btn">← Back to Active Venues</a>
    </div>
</div>

<% if @venues.any? %>
    <div style="display: flex; flex-direction: column; gap: 8px;">
        <% @venues.each do |venue| %>
            <div class="venue-card" style="padding: 12px; border: 1px solid #fbb6ce; border-radius: 6px; background: #fef7f7;">
                <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 10px;">
                    <div style="flex: 1; min-width: 0;">
                        <div style="font-weight: 600; font-size: 1.1rem; word-break: break-word; color: #718096;"><%= venue.name %> <span style="color: #e53e3e; font-size: 0.8rem; font-weight: normal;">(Archived)</span></div>
                        <% if venue.archived_at.present? %>
                            <div style="margin-top: 2px; font-size: 0.75rem; color: #a0aec0;">
                                📦 Archived on <%= venue.archived_at.strftime('%B %d, %Y at %I:%M %p') %>
                            </div>
                        <% end %>
                        <div style="margin-top: 4px; display: flex; gap: 15px; font-size: 0.85rem; color: #4a5568; flex-wrap: wrap;">
                            <span><strong>Contact:</strong> <%= venue.contact_name %></span>
                            <span><strong>Phone:</strong> <%= venue.phone_number %></span>
                            <span><strong>Location:</strong> <%= venue.location %></span>
                        </div>
                        <% if venue.website.present? %>
                            <div style="margin-top: 4px; font-size: 0.85rem; color: #718096;">
                                <a href="<%= venue.website %>" target="_blank" style="color: #667eea; text-decoration: none;">🌐 <%= venue.website %></a>
                            </div>
                        <% end %>
                        <% if venue.notes.present? %>
                            <div style="margin-top: 4px; font-size: 0.85rem; color: #718096;">
                                <strong>📝 Notes:</strong> <%= venue.notes.length > 100 ? venue.notes[0..100] + '...' : venue.notes %>
                            </div>
                        <% end %>
                    </div>
                    <div style="display: flex; gap: 8px; flex-wrap: wrap;">
                        <a href="/venues/<%= venue.id %>" class="btn btn-small" style="font-size: 0.8rem;">View</a>
                        <form method="POST" action="/venues/<%= venue.id %>/unarchive" style="display: inline;" onsubmit="return confirm('Are you sure you want to unarchive this venue?');">
                            <button type="submit" class="btn btn-success btn-small" style="font-size: 0.8rem;">📂 Unarchive</button>
                        </form>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<% else %>
    <div style="text-align: center; padding: 40px;">
        <h3>No archived venues</h3>
        <p>You haven't archived any venues yet.</p>
        <a href="/venues" class="btn">← Back to Active Venues</a>
    </div>
<% end %>