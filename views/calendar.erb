<div class="page-header">
    <div>
        <h2 class="page-title">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -4px; margin-right: 8px; color: black;">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
            <%= month_name(@month) %> <%= @year %>
        </h2>
        <p style="color: #718096; margin: 0; font-size: 0.85rem;">Click to toggle blackout • Drag to select multiple dates</p>
    </div>
    
    <div class="page-actions">
        <a href="/calendar?year=<%= Date.current.year %>&month=<%= Date.current.month %>" class="btn btn-small">Today</a>
        <a href="<%= prev_month_link(@year, @month) %>" class="btn btn-small">‹ Prev</a>
        <a href="<%= next_month_link(@year, @month) %>" class="btn btn-small">Next ›</a>
    </div>
</div>

<!-- Compact Legend -->
<div style="display: flex; gap: 12px; margin-bottom: 15px; padding: 8px; background: #f7fafc; border-radius: 6px; flex-wrap: wrap; font-size: 0.8rem;">
    <div style="display: flex; align-items: center; gap: 3px;">
        <div style="width: 12px; height: 12px; background: #667eea; border-radius: 2px;"></div>
        <span>Current Band</span>
    </div>
    <% if current_user.bands.count > 1 %>
        <div style="display: flex; align-items: center; gap: 3px;">
            <div style="width: 12px; height: 12px; background: #f6ad55; border-radius: 2px;"></div>
            <span>Other Bands</span>
        </div>
    <% end %>
    <div style="display: flex; align-items: center; gap: 3px;">
        <div style="width: 12px; height: 12px; background: #fc8181; border-radius: 2px;"></div>
        <span>Conflicts</span>
    </div>
    <div style="display: flex; align-items: center; gap: 3px;">
        <div style="width: 12px; height: 12px; background: #6b46c1; border-radius: 2px;"></div>
        <span>Blackouts</span>
    </div>
    <div style="display: flex; align-items: center; gap: 3px;">
        <div style="width: 12px; height: 12px; background: #48bb78; border-radius: 2px;"></div>
        <span>Best Practice</span>
    </div>
    <div style="display: flex; align-items: center; gap: 3px;">
        <div style="width: 12px; height: 12px; background: #2f855a; border-radius: 2px;"></div>
        <span>(Unofficial) Best Practice</span>
    </div>
</div>

<!-- Calendar Grid -->
<div class="calendar-grid">
    <!-- Day headers -->
    <div class="calendar-header">Sunday</div>
    <div class="calendar-header">Monday</div>
    <div class="calendar-header">Tuesday</div>
    <div class="calendar-header">Wednesday</div>
    <div class="calendar-header">Thursday</div>
    <div class="calendar-header">Friday</div>
    <div class="calendar-header">Saturday</div>
    
    <!-- Calendar days -->
    <% calendar_days_for_month(@year, @month).each do |date| %>
        <% gigs = gigs_for_date_legacy(date) %>
        <% is_current_month = date.month == @month %>
        <% is_today = date == Date.current %>
        <% is_past = date < Date.current %>
        
        <div class="calendar-day <%= 'other-month' unless is_current_month %> <%= 'today' if is_today %> <%= 'past-date' if is_past %>" 
             data-date="<%= date.to_s %>" 
             <%= "onclick=\"toggleBlackoutDate('#{date.to_s}')\"" unless is_past %>
             style="cursor: <%= is_past ? 'not-allowed' : 'pointer' %>;">
            <div class="day-number"><%= date.day %></div>
            
            <div class="day-events">
                <!-- Current band gigs -->
                <% if gigs[:current] %>
                    <% gigs[:current].each do |gig| %>
                        <div class="gig-event current-band" title="<%= gig.name %> at <%= gig.venue&.name || 'TBD' %>">
                            <a href="/gigs/<%= gig.id %>" style="color: white; text-decoration: none;">
                                <%= gig.name %>
                            </a>
                        </div>
                    <% end %>
                <% end %>
                
                <!-- Other band gigs -->
                <% if gigs[:other] && current_user.bands.count > 1 %>
                    <% gigs[:other].each do |gig| %>
                        <%
                          time_info = gig.start_time ? gig.start_time.strftime('%l:%M %p').strip : 'Time TBD'
                          tooltip_text = "#{gig.name} | #{gig.band.name} | #{gig.venue&.name || 'TBD'} | #{gig.performance_date.strftime('%B %d, %Y')} at #{time_info} | Switch to #{gig.band.name}'s profile to view details"
                        %>
                        <div class="gig-event other-band other-band-hover"
                             title="<%= tooltip_text %>">
                            <%= gig.band.name %>: <%= gig.name %>
                        </div>
                    <% end %>
                <% end %>
                
                <!-- Bandmate conflicts -->
                <% if gigs[:conflicts] %>
                    <% gigs[:conflicts].each do |gig| %>
                        <div class="gig-event conflict" title="Bandmate busy with <%= gig.band.name %>: <%= gig.name %>">
                            Bandmate busy - <%= gig.band.name %>
                        </div>
                    <% end %>
                <% end %>
                
                <!-- Blackout dates -->
                <% if gigs[:blackouts] %>
                    <% gigs[:blackouts].each do |blackout| %>
                        <% user_text = blackout.user == current_user ? "You" : blackout.user.display_name_or_fallback %>
                        <% is_current_user = blackout.user == current_user %>
                        <div class="gig-event blackout <%= 'user-blackout' if is_current_user %>"
                             title="<%= user_text %> - unavailable<%= blackout.reason.present? ? ': ' + blackout.reason : '' %>"
                             <%= 'data-user-blackout="true"' if is_current_user %>
                             onclick="event.stopPropagation();">
                            <%= user_text %> - unavailable
                        </div>
                    <% end %>
                <% end %>

                <!-- Best Practice dates -->
                <% best_practices_for_date = @best_practice_dates.select { |bp| bp[:date] == date } %>
                <% if best_practices_for_date.any? %>
                    <% best_practices_for_date.each do |best_practice| %>
                        <% is_finalized = best_practice[:practice].status == 'finalized' %>
                        <% practice_text = is_finalized ? 'Practice' : '(Unofficial) Best Practice' %>
                        <% css_class = is_finalized ? 'best-practice' : 'unofficial-practice' %>
                        <div class="gig-event <%= css_class %>"
                             title="<%= practice_text %> for <%= best_practice[:band].name %>">
                            <%= best_practice[:band].name %> - <%= practice_text %>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>

