<%
  # Default values for form actions
  submit_text = 'Save'
  cancel_url = 'javascript:history.back()'

  # Check if locals were passed (for ERB partials with explicit locals)
  if defined?(local_assigns) && local_assigns
    submit_text = local_assigns[:submit_text] if local_assigns[:submit_text]
    cancel_url = local_assigns[:cancel_url] if local_assigns[:cancel_url]
  end

  # Check if variables were passed as locals directly (Sinatra ERB style)
  submit_text = submit_text_param if defined?(submit_text_param) && submit_text_param
  cancel_url = cancel_url_param if defined?(cancel_url_param) && cancel_url_param
%>
<div class="actions">
    <button type="submit" class="btn btn-success" aria-describedby="submit-help"><%= submit_text %></button>
    <div id="submit-help" class="sr-only">Submit the form to save your changes</div>
    <a href="<%= cancel_url %>" class="btn" role="button" aria-describedby="cancel-help">Cancel</a>
    <div id="cancel-help" class="sr-only">Cancel and return without saving changes</div>
</div>