<h2>Sign Up for Bandmate</h2>

<% if @errors && @errors.any? %>
  <div class="errors">
    <% @errors.each do |error| %>
      <p><%= error %></p>
    <% end %>
  </div>
<% end %>

<form method="post" action="/signup">
  <div class="form-group">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" value="<%= params[:username] %>" required>
  </div>

  <div class="form-group">
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>
    <small>Password must be at least 6 characters long</small>
  </div>

  <div class="form-group">
    <label for="email">Email Address (Optional):</label>
    <input type="email" id="email" name="email" placeholder="Enter your email address">
    <small>Optional - for account recovery and notifications</small>
  </div>

  <div class="form-group">
    <label for="login_secret">Login Secret:</label>
    <input type="password" id="login_secret" name="login_secret" required>
    <small>Enter the secret code required for registration</small>
  </div>

  <div class="actions">
    <button type="submit" class="btn">Sign Up</button>
    <a href="/login" class="btn">Already have an account? Login</a>
  </div>
</form>