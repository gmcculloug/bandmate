<% if params[:copied] %>
    <div style="margin-bottom: 20px; padding: 15px; background: #f0fff4; border-radius: 8px; border-left: 4px solid #38a169;">
        <p style="margin: 0; color: #2f855a; font-weight: 500;">
            âœ… Venue successfully copied to <%= params[:copied] == '1' ? '1 band' : "#{params[:copied]} bands" %>!
        </p>
    </div>
<% end %>

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 10px;">
    <h2>ğŸ¢ <%= @venue.name %><% if @venue.archived? %> <span style="color: #e53e3e; font-size: 0.7rem; font-weight: normal;">(Archived)</span><% end %></h2>
    <div class="actions">
        <a href="/venues/<%= @venue.id %>/edit" class="btn">Edit</a>
    </div>
</div>

<div class="card">
    <h3>Venue Details</h3>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-top: 15px;">
        <div class="detail-item">
            <span class="detail-label">Location:</span> <%= @venue.location %>
        </div>
        <div class="detail-item">
            <span class="detail-label">Contact Name:</span> <%= @venue.contact_name %>
        </div>
        <div class="detail-item">
            <span class="detail-label">Phone Number:</span> <%= @venue.phone_number %>
        </div>
        <% if @venue.website.present? %>
            <div class="detail-item">
                <span class="detail-label">Website:</span> 
                <a href="<%= @venue.website %>" target="_blank" style="color: #667eea; text-decoration: none;">ğŸŒ <%= @venue.website %></a>
            </div>
        <% end %>
    </div>
    
    <% if @venue.notes.present? %>
        <div style="margin-top: 20px;">
            <h4 style="margin-bottom: 10px; color: #4a5568;">ğŸ“ Notes</h4>
            <div style="background: #f7fafc; padding: 15px; border-radius: 8px; border-left: 4px solid #667eea;">
                <p style="margin: 0; white-space: pre-wrap; line-height: 1.6;"><%= @venue.notes %></p>
            </div>
        </div>
    <% end %>
</div>

<div class="card" style="margin-top: 20px;">
    <h3>Actions</h3>
    <div style="margin-bottom: 20px;">
        <h4>Copy to Band</h4>
        <% if current_user.bands.count > 1 %>
            <p style="color: #666; font-size: 0.9rem; margin-bottom: 10px;">
                Select a band to copy this venue to their venues:
            </p>
            <% @bands.where.not(id: @venue.band.id).each do |band| %>
                <% existing_copy = band.venues.find_by(name: @venue.name) %>
                <% if existing_copy %>
                    <div style="margin-bottom: 8px; padding: 8px; background: #f0f4f8; border-radius: 4px; color: #666;">
                        âœ“ Already copied to <%= band.name %>
                    </div>
                <% else %>
                    <form method="POST" action="/venues/<%= @venue.id %>/copy" style="margin-bottom: 8px;">
                        <input type="hidden" name="target_band_id" value="<%= band.id %>">
                        <input type="hidden" name="from_venue" value="<%= @venue.id %>">
                        <button type="submit" class="btn" style="width: 100%; text-align: left;">
                            ğŸ“‹ Copy to <%= band.name %>
                        </button>
                    </form>
                <% end %>
            <% end %>
        <% else %>
            <p style="color: #666; font-size: 0.9rem; margin-bottom: 10px;">
                You need to be a member of at least one other band to copy venues.
            </p>
        <% end %>
    </div>
</div>

<div class="card" style="margin-top: 20px;">
    <h3>Gigs at this Venue (<%= @venue.gigs.count %>)</h3>
    <% if @venue.gigs.any? %>
        <div style="display: flex; flex-direction: column; gap: 8px;">
            <% @venue.gigs.order(:performance_date).each do |gig| %>
                <div style="display: flex; justify-content: space-between; align-items: center; padding: 8px 0; border-bottom: 1px solid #e2e8f0; cursor: pointer;" onclick="window.location.href='/gigs/<%= gig.id %>'">
                    <div style="flex: 1; min-width: 0;">
                        <div style="font-weight: 600; color: #2d3748; word-break: break-word;"><%= gig.name %></div>
                        <div style="font-size: 0.85rem; color: #718096; display: flex; gap: 8px; flex-wrap: wrap;">
                            <span><strong>Band:</strong> <%= gig.band.name %></span>
                            <% if gig.performance_date %>
                                <span><strong>Date:</strong> <%= gig.performance_date.strftime('%B %d, %Y') %></span>
                            <% end %>
                            <% if gig.start_time %>
                                <span><strong>Time:</strong> <%= gig.start_time.strftime('%I:%M %p') %></span>
                            <% end %>
                        </div>
                    </div>
                    <div class="actions" onclick="event.stopPropagation();" style="flex-shrink: 0;">
                        <a href="/gigs/<%= gig.id %>" class="btn" style="padding: 4px 8px; font-size: 0.75rem;">View</a>
                    </div>
                </div>
            <% end %>
        </div>
    <% else %>
        <p style="text-align: center; color: #718096; font-style: italic;">No gigs scheduled at this venue yet.</p>
    <% end %>
</div>

<div class="card" style="margin-top: 20px;">
    <h3>Venue Management</h3>
    <div style="margin-top: 15px; display: flex; gap: 10px; flex-wrap: wrap;">
        <% if @venue.archived? %>
            <form method="POST" action="/venues/<%= @venue.id %>/unarchive" style="display: inline;">
                <button type="submit" class="btn btn-success" onclick="return confirm('Unarchive this venue? It will appear in the active venues list and be available for new gigs.')">ğŸ“‚ Unarchive Venue</button>
            </form>
        <% else %>
            <form method="POST" action="/venues/<%= @venue.id %>/archive" style="display: inline;">
                <button type="submit" class="btn btn-warning" onclick="return confirm('Archive this venue? It will be hidden from the venues list and unavailable for new gigs.')">ğŸ“¦ Archive Venue</button>
            </form>
        <% end %>
        <form method="POST" action="/venues/<%= @venue.id %>" style="display: inline;">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this venue? This will also remove it from any associated gigs.')">ğŸ—‘ï¸ Delete Venue</button>
        </form>
    </div>
</div> 