<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
    <div>
        <h2>üéµ <%= @song.title %><% if @song.archived? %> <span style="color: #e53e3e; font-size: 0.7rem; font-weight: normal;">(Archived)</span><% end %></h2>
        <% if @song.archived? && @song.archived_at.present? %>
            <div style="margin-top: 5px; font-size: 0.85rem; color: #a0aec0;">
                üì¶ Archived on <%= @song.archived_at.strftime('%B %d, %Y at %I:%M %p') %>
            </div>
        <% end %>
    </div>
    <div class="actions">
        <a href="/songs/<%= @song.id %>/edit" class="btn">Edit</a>
        <a href="/songs" class="btn">Back to Songs</a>
    </div>
</div>

<div class="card">
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">
        <div>
            <h3>Song Details</h3>
            <div class="song-details">
                <div class="detail-item">
                    <span class="detail-label">Artist:</span> <%= @song.artist %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Bands:</span> 
                    <% @song.bands.each_with_index do |band, index| %>
                        <%= band.name %><%= ', ' unless index == @song.bands.length - 1 %>
                    <% end %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Key:</span> <%= @song.key %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Original Key:</span> <%= @song.original_key || 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Tempo:</span> <%= @song.tempo ? "#{@song.tempo} BPM" : 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Genre:</span> <%= @song.genre || 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Duration:</span> <%= @song.duration || 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Year:</span> <%= @song.year || 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Album:</span> <%= @song.album || 'N/A' %>
                </div>
            </div>
        </div>

        <% if @song.url.present? %>
        <div>
            <h3>Actions</h3>
            <div style="margin-bottom: 20px;">
                <a href="<%= @song.url %>" target="_blank" class="btn btn-success">üéµ Listen on Streaming Platform</a>
            </div>
        </div>
        <% end %>
    </div>

    <% if @song.notes.present? %>
        <div style="margin-top: 30px;">
            <h3>Set List Notes <span style="color: #718096; font-weight: normal; font-size: 0.9rem;">(visible on gig screen and printed set list)</span></h3>
            <div style="background: #f7fafc; padding: 20px; border-radius: 8px; white-space: pre-wrap;"><%= @song.notes %></div>
        </div>
    <% end %>

    <% if @song.lyrics.present? %>
        <div style="margin-top: 30px;">
            <h3>Lyrics</h3>
            <div style="background: #f7fafc; padding: 20px; border-radius: 8px; white-space: pre-wrap; font-family: monospace;"><%= @song.lyrics %></div>
        </div>
    <% end %>
</div>

<div class="card" style="margin-top: 20px;">
    <h3>Song Management</h3>
    <div style="margin-top: 15px; display: flex; gap: 10px; flex-wrap: wrap;">
        <% if @song.archived? %>
            <form method="POST" action="/songs/<%= @song.id %>/unarchive" style="display: inline;">
                <button type="submit" class="btn btn-success" onclick="return confirm('Unarchive this song? It will appear in the active songs list and be available for gigs.')">üìÇ Unarchive Song</button>
            </form>
        <% else %>
            <form method="POST" action="/songs/<%= @song.id %>/archive" style="display: inline;">
                <button type="submit" class="btn btn-warning" onclick="return confirm('Archive this song? It will be hidden from the songs list and unavailable for new gigs.')">üì¶ Archive Song</button>
            </form>
        <% end %>
        <form method="POST" action="/songs/<%= @song.id %>" style="display: inline;">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this song? This will remove it from all gigs and bands.')">üóëÔ∏è Delete Song</button>
        </form>
    </div>
</div> 