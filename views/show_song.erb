<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
    <h2>üéµ <%= @song.title %></h2>
    <div class="actions">
        <a href="/songs/<%= @song.id %>/edit" class="btn">Edit</a>
        <a href="/songs" class="btn">Back to Songs</a>
    </div>
</div>

<div class="card">
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">
        <div>
            <h3>Song Details</h3>
            <div class="song-details">
                <div class="detail-item">
                    <span class="detail-label">Artist:</span> <%= @song.artist %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Bands:</span> 
                    <% @song.bands.each_with_index do |band, index| %>
                        <%= band.name %><%= ', ' unless index == @song.bands.length - 1 %>
                    <% end %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Key:</span> <%= @song.key %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Original Key:</span> <%= @song.original_key || 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Tempo:</span> <%= @song.tempo ? "#{@song.tempo} BPM" : 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Genre:</span> <%= @song.genre || 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Duration:</span> <%= @song.duration || 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Year:</span> <%= @song.year || 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Album:</span> <%= @song.album || 'N/A' %>
                </div>
            </div>
        </div>

        <div>
            <h3>Actions</h3>
            <% if @song.url.present? %>
                <div style="margin-bottom: 20px;">
                    <a href="<%= @song.url %>" target="_blank" class="btn btn-success">üéµ Listen on Streaming Platform</a>
                </div>
            <% end %>
            
            <div style="margin-bottom: 20px;">
                <h4>Add to Gig</h4>
                <form method="POST" action="/gigs" style="display: flex; gap: 10px; align-items: end;">
                    <div class="form-group" style="flex: 1;">
                        <label for="gig_name">Gig Name</label>
                        <input type="text" id="gig_name" name="name" placeholder="e.g., Friday Night Set" required>
                    </div>
                    <button type="submit" class="btn">Create & Add</button>
                </form>
            </div>

            <% existing_gigs = Gig.joins(:band).where(bands: { id: @song.band_ids }) %>
            <% if existing_gigs.any? %>
                <div>
                    <h4>Add to Existing Gig</h4>
                    <% existing_gigs.each do |gig| %>
                        <% unless gig.songs.include?(@song) %>
                            <form method="POST" action="/gigs/<%= gig.id %>/songs" style="margin-bottom: 10px;">
                                <input type="hidden" name="song_id" value="<%= @song.id %>">
                                <button type="submit" class="btn" style="width: 100%; text-align: left;">
                                    ‚ûï Add to "<%= gig.name %>" (<%= gig.band.name %>)
                                </button>
                            </form>
                        <% end %>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>

    <% if @song.notes.present? %>
        <div style="margin-top: 30px;">
            <h3>Notes</h3>
            <div style="background: #f7fafc; padding: 20px; border-radius: 8px; white-space: pre-wrap;">
                <%= @song.notes %>
            </div>
        </div>
    <% end %>

    <% if @song.lyrics.present? %>
        <div style="margin-top: 30px;">
            <h3>Lyrics</h3>
            <div style="background: #f7fafc; padding: 20px; border-radius: 8px; white-space: pre-wrap; font-family: monospace;">
                <%= @song.lyrics %>
            </div>
        </div>
    <% end %>
</div>

<div class="card" style="margin-top: 20px;">
    <h3>Song Management</h3>
    <form method="POST" action="/songs/<%= @song.id %>" style="margin-top: 15px;">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this song? This will remove it from all gigs and bands.')">üóëÔ∏è Delete Song</button>
    </form>
</div> 