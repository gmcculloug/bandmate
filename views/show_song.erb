<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
    <div>
        <h2><svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -3px; margin-right: 8px;"><path d="M9 18V5l12-2v13"></path><circle cx="6" cy="18" r="3"></circle><circle cx="18" cy="16" r="3"></circle></svg><%= @song.title %><% if @song.archived? %> <span style="color: #e53e3e; font-size: 0.7rem; font-weight: normal;">(Archived)</span><% end %></h2>
        <% if @song.archived? && @song.archived_at.present? %>
            <div style="margin-top: 5px; font-size: 0.85rem; color: #a0aec0;">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><polyline points="21,8 21,21 3,21 3,8"></polyline><rect x="1" y="3" width="22" height="5"></rect><line x1="10" y1="12" x2="14" y2="12"></line></svg>Archived on <%= @song.archived_at.strftime('%B %d, %Y at %I:%M %p') %>
            </div>
        <% end %>
    </div>
    <div class="actions">
        <a href="/songs/<%= @song.id %>/edit<%= @gig ? "?from_gig=#{@gig.id}" : "" %>" class="btn">Edit</a>
    </div>
</div>

<div class="card">
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">
        <div>
            <h3>Song Details</h3>
            <div class="song-details">
                <div class="detail-item">
                    <span class="detail-label">Artist:</span> <%= @song.artist %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Bands:</span> 
                    <% @song.bands.each_with_index do |band, index| %>
                        <%= band.name %><%= ', ' unless index == @song.bands.length - 1 %>
                    <% end %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Key:</span> <%= @song.key %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Original Key:</span> <%= @song.original_key || 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Tempo:</span> <%= @song.tempo ? "#{@song.tempo} BPM" : 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Genre:</span> <%= @song.genre || 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Duration:</span> <%= @song.duration || 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Year:</span> <%= @song.year || 'N/A' %>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Album:</span> <%= @song.album || 'N/A' %>
                </div>
            </div>
        </div>

        <% if @song.url.present? %>
        <div>
            <h3>Actions</h3>
            <div style="margin-bottom: 20px;">
                <a href="<%= @song.url %>" target="_blank" class="btn btn-success"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 6px;"><path d="M9 18V5l12-2v13"></path><circle cx="6" cy="18" r="3"></circle><circle cx="18" cy="16" r="3"></circle></svg>Listen on Streaming Platform</a>
            </div>
        </div>
        <% end %>
    </div>

    <% if @song.notes.present? %>
        <div style="margin-top: 30px;">
            <h3>Set List Notes <span style="color: #718096; font-weight: normal; font-size: 0.9rem;">(visible on gig screen and printed set list)</span></h3>
            <div style="background: #f7fafc; padding: 20px; border-radius: 8px; white-space: pre-wrap;"><%= @song.notes %></div>
        </div>
    <% end %>

    <% if @song.lyrics.present? %>
        <div style="margin-top: 30px;">
            <h3>Lyrics</h3>
            <div style="background: #f7fafc; padding: 20px; border-radius: 8px; white-space: pre-wrap; font-family: monospace;"><%= @song.lyrics %></div>
        </div>
    <% end %>
</div>

<div class="card" style="margin-top: 20px;">
    <h3>Song Management</h3>
    <div style="margin-top: 15px; display: flex; gap: 10px; flex-wrap: wrap;">
        <% if @song.archived? %>
            <form method="POST" action="/songs/<%= @song.id %>/unarchive" style="display: inline;">
                <button type="submit" class="btn btn-success" onclick="return confirm('Unarchive this song? It will appear in the active songs list and be available for gigs.')"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 6px;"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14,2 14,8 20,8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10,9 9,9 8,9"></polyline></svg>Unarchive Song</button>
            </form>
        <% else %>
            <form method="POST" action="/songs/<%= @song.id %>/archive" style="display: inline;">
                <button type="submit" class="btn btn-warning" onclick="return confirm('Archive this song? It will be hidden from the songs list and unavailable for new gigs.')"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 6px;"><polyline points="21,8 21,21 3,21 3,8"></polyline><rect x="1" y="3" width="22" height="5"></rect><line x1="10" y1="12" x2="14" y2="12"></line></svg>Archive Song</button>
            </form>
        <% end %>
    </div>
</div> 