# Environment variables for Bandmate
# Copy this file to .env and fill in your values

# Session secret for secure sessions (required)
# Generate a secure random string at least 64 characters long
SESSION_SECRET=your_very_long_and_secure_session_secret_here_at_least_64_characters_long

# Account creation code for user registration (required)
# This code is required for new users to create accounts
BANDMATE_ACCT_CREATION_SECRET=your_account_creation_code_here

# PostgreSQL Database Configuration
# For local development, these can be left as defaults if using standard PostgreSQL setup
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=bandmate_production
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=

# For production deployments (e.g., Heroku), you can use DATABASE_URL instead
# DATABASE_URL=postgresql://username:password@host:port/database_name
