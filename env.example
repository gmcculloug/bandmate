# Environment variables for Bandage
# Copy this file to .env and fill in your values

# Session secret for secure sessions (required)
# Generate a secure random string at least 64 characters long
SESSION_SECRET=your_very_long_and_secure_session_secret_here_at_least_64_characters_long

# Login secret for user registration (required)
# This secret code is required for new users to sign up
BANDAGE_LOGIN_SECRET=your_registration_secret_code_here

# Database path for production (optional)
# Defaults to 'bandage.db' in the current directory
# DATABASE_PATH=/path/to/your/database.db
